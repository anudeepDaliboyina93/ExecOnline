<aura:component implements="lightning:actionOverride,flexipage:availableForRecordHome" access="global" 
controller="OpportunityUseCaseConfigController"  >
    <aura:attribute name="record" type="Object" />
    <aura:attribute name="oppUseCaseObject" type="Use_Case_Opportunity__c" default="{'sObjectType':'Use_Case_Opportunity__c'}"  />

    <aura:attribute name="opportunityId" type="String" />
    <aura:attribute name="accountId" type="String" />

    <aura:attribute name="showSpinner" type="Boolean" default="true" description="Use for Showing Spinner"/>

    <aura:attribute name="fields" type="List" default="[]"  />
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <aura:registerEvent name="OppCustomEvent"  type="c:OpportunityUseCaseEvent" />
    <aura:html tag="style">
        .slds-spinner_container {
        width: 240% !important;
        margin-left: -70% !important;
        }
        .slds-modal__container {
        max-width: 50rem;
        width: 50rem;
        }
    </aura:html>
    <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <aura:if isTrue="{!v.showSpinner}">
            <lightning:spinner alternativeText="Loading" size="medium" class="custom-spinner" aura:id="spinner" />
        </aura:if>
        <div class="slds-modal__container">
            <div class="slds-modal__header">
                <h2 class="slds-text-heading--medium">New Use Case</h2>
            </div>
            <div class="slds-modal__content slds-p-around--medium ">
            <div aura:id="errorDiv"></div>   
                <div class="slds-scrollable slds-grow">
                        <lightning:recordEditForm objectApiName="Use_Case__c" onsuccess="{!c.onSuccess}" 
                            onerror="{!c.onError}" aura:id="recordEditForm" onload="{!c.onLoad}" class="customRecordEditForm">          
                			<lightning:layout  multipleRows="true"  aura:id="useCaseAccordian">
                				<aura:iteration items="{!v.fields}" var="field" >
                                    <lightning:layoutItem   class="slds-m-bottom_medium slds-p-around_large" size="6" >				     
                                    	<lightning:inputField fieldName="{!field.apiName}" required="true" aura:id="inputField" 
                                            class=""/>
                                    </lightning:layoutItem>
                                </aura:iteration>
            				</lightning:layout>	
                            <lightning:inputField fieldName="Account__c" required="true" class="slds-hide" 
                                aura:id="account"/>
                            <lightning:inputField fieldName="Status__c" required="true"  class="slds-hide"
                                aura:id="status" value=""/>
                        </lightning:recordEditForm>	
                </div>		
            </div>
            <div class="slds-modal__footer">
                <lightning:button variant="neutral" label="Cancel" onclick="{!c.cancelDialog}"/>
                <lightning:button variant="brand" label="Save" name="save" type="submit" onclick="{!c.save}"  />
            </div>
        </div>
    </div>
    <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>
</aura:component>